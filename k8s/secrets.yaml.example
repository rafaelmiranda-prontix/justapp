# ⚠️ IMPORTANTE: Este é um arquivo de exemplo
# Crie o secret real usando kubectl ou um gerenciador de secrets
# NUNCA commite secrets reais no repositório!

# Exemplo de criação via kubectl:
# kubectl create secret generic legalconnect-secrets \
#   --from-literal=POSTGRES_PASSWORD='your-secure-password' \
#   --from-literal=REDIS_PASSWORD='your-redis-password' \
#   --from-literal=NEXTAUTH_SECRET='your-nextauth-secret' \
#   --from-literal=RESEND_API_KEY='your-resend-key' \
#   --from-literal=SUPABASE_SERVICE_ROLE_KEY='your-supabase-key' \
#   --namespace=legalconnect

apiVersion: v1
kind: Secret
metadata:
  name: justapp-secrets
  namespace: justapp
type: Opaque
stringData:
  # Database
  POSTGRES_PASSWORD: "CHANGE_THIS_PASSWORD"
  
  # Redis
  REDIS_PASSWORD: "CHANGE_THIS_REDIS_PASSWORD"
  
  # NextAuth
  NEXTAUTH_SECRET: "CHANGE_THIS_NEXTAUTH_SECRET_MIN_32_CHARS"
  
  # Email (Resend)
  RESEND_API_KEY: "CHANGE_THIS_RESEND_API_KEY"
  
  # Supabase
  SUPABASE_SERVICE_ROLE_KEY: "CHANGE_THIS_SUPABASE_KEY"
  NEXT_PUBLIC_SUPABASE_URL: "https://your-project.supabase.co"
  
  # Stripe (opcional)
  STRIPE_SECRET_KEY: "CHANGE_THIS_STRIPE_SECRET"
  NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY: "CHANGE_THIS_STRIPE_PUBLISHABLE"
  STRIPE_WEBHOOK_SECRET: "CHANGE_THIS_STRIPE_WEBHOOK_SECRET"
  
  # AI Providers (opcional)
  OPENAI_API_KEY: "CHANGE_THIS_OPENAI_KEY"
  ANTHROPIC_API_KEY: "CHANGE_THIS_ANTHROPIC_KEY"
  GEMINI_API_KEY: "CHANGE_THIS_GEMINI_KEY"
  
  # Pusher (opcional)
  PUSHER_APP_ID: "CHANGE_THIS_PUSHER_APP_ID"
  PUSHER_KEY: "CHANGE_THIS_PUSHER_KEY"
  PUSHER_SECRET: "CHANGE_THIS_PUSHER_SECRET"
  PUSHER_CLUSTER: "us2"
