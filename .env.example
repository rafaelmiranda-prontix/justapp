# Database
DATABASE_URL="postgresql://user:password@localhost:5432/legalmatch?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# AI Provider Configuration
# Opções: anthropic, openai, gemini (padrão: anthropic)
AI_PROVIDER="anthropic"

# Anthropic (Claude)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"
ANTHROPIC_FALLBACK_MODEL="claude-3-5-haiku-20241022"

# OpenAI (GPT)
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4o"
OPENAI_FALLBACK_MODEL="gpt-4o-mini"

# Google Gemini
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-1.5-pro"
GEMINI_FALLBACK_MODEL="gemini-1.5-flash"

# App Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_WHATSAPP_SUPPORT="5521999999999"

# Cron Job Security
CRON_SECRET="generate-a-secure-random-string-here"

# Email (SendGrid or Resend)
EMAIL_FROM="noreply@legalmatch.com.br"
SENDGRID_API_KEY="your-sendgrid-api-key"
# or
RESEND_API_KEY="your-resend-api-key"

# Payments (Stripe or Pagar.me)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable"

# Pusher (Real-time WebSocket)
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="us2"
NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
NEXT_PUBLIC_PUSHER_CLUSTER="us2"
